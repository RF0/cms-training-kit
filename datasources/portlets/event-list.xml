<datasources>
    <datasource name="getContentBySection" result-element="events">
        <parameter name="menuItemKeys">${select(portal.pageKey,-1)}</parameter>
        <parameter name="levels">1</parameter>
        <parameter name="query">contenttype = 'event'</parameter>
        <parameter name="orderBy">data/start-date ASC, title ASC</parameter>
        <parameter name="index">${select(param.index, 0)}</parameter>
        <parameter name="count">10</parameter>
        <parameter name="includeData">true</parameter>
        <parameter name="childrenLevel">1</parameter>
        <parameter name="parentLevel">0</parameter>
    </datasource>
</datasources>