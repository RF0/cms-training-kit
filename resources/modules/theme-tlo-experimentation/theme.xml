<theme>
    <region-prefix/>
    <!--
    <accessibility>
        <bypass text="stk.accessibility.skip-to-main-content" anchor="main" access-key=""/>
    </accessibility>
    -->
    <device-classes>
        <device-class name="all">
            <image>
                <max-width>1500</max-width>
                <format>jpeg</format>
                <quality>80</quality>
                <filters>
                    <filter>rounded(4)</filter>
                </filters>
                <!--<sizes>
                    <size name="full">
                        <filter>scalewidth</filter>
                        <width>1</width>
                    </size>
                    <size name="wide">
                        <filter>scalewide</filter>
                        <width>1</width>
                        <height>0.4</height>
                    </size>
                    <size name="regular">
                        <filter>scalewidth</filter>
                        <width>0.4</width>
                    </size>
                    <size name="list">
                        <filter>scalewidth</filter>
                        <width>0.3</width>
                    </size>
                    <size name="square">
                        <filter>scalesquare</filter>
                        <size>0.4</size>
                    </size>
                    <size name="thumbnail">
                        <filter>scalesquare</filter>
                        <size>0.1</size>
                    </size>
                </sizes>-->
            </image>
            <scripts>               
                <script>{theme}less-min.js</script> 
                <script>/_public/library-stk/js/jquery.js</script>                
                <script condition="lt IE 9">/_public/library-stk/js/respond.min.js</script>
                <script condition="lt IE 9">/_public/library-stk/js/html5shiv.js</script>
                <script condition="lt IE 9">/_public/library-stk/js/selectivizr-min.js</script>
            </scripts>
        </device-class>
        <device-class name="desktop,unknown">
            <layout name="frontpage">                
                <row width="9">
                    <group width="4">
                        <region name="r1-g1-c1">
                            <width>9</width>
                        </region>
                    </group>
                    <group width="5">
                        <region name="r1-g2-c1">
                            <width>4</width>
                        </region>
                        <region name="r1-g2-c2">
                            <width>5</width>
                        </region>
                        <region name="r1-g2-c3">
                            <width>9</width>
                        </region>
                        <region name="r1-g2-c4">
                            <width>4</width>
                        </region>
                        <region name="r1-g2-c5">
                            <width>5</width>
                        </region>
                    </group>
                    
                </row>
            </layout>
            <layout name="default">
                <row width="9">
                    <region name="r1-c1">
                        <width>9</width>
                    </region>
                </row>
                <row width="9">
                    <region name="r2-c1">
                        <width>3</width>
                    </region>
                    <region name="r2-c2">
                        <width>3</width>
                    </region>
                    <region name="r2-c3">
                        <width>3</width>
                    </region>
                </row>
            </layout> 
            
            <layout name="article">
                <row width="9">
                    <region name="r1-c1">
                        <width>9</width>
                    </region>
                </row>
                <row width="9">
                    <region name="r2-c1">
                        <width>3</width>
                    </region>
                    <region name="r2-c2">
                        <scalable>true</scalable>
                    </region>
                    <region name="r2-c3">
                        <width>3</width>
                    </region>
                </row>
            </layout>    
            <styles>
                <style>{theme}desktop.less</style>
            </styles>
            <scripts>                
                <script>/_public/library-stk/js/jquery.js</script>
                <script>/_public/library-stk/js/stk.js</script>
                <script>{theme}all.js</script>
            </scripts>
        </device-class>
        <device-class name="mobile">
            <layout name="default">
                <area width="320">
                    <regions>
                        <region name="center">
                            <width>296</width>
                            <padding>
                                <left>0</left>
                                <right>0</right>
                                <top>0</top>
                                <bottom>0</bottom>
                            </padding>
                        </region>
                    </regions>
                </area>                    
            </layout>
            <image>
                <quality>70</quality>
            </image>
            <styles>
                <style>{theme}mobile.less</style>
            </styles>
            <scripts>
                <script>{theme}mobile-min.js</script>
            </scripts>
        </device-class>
    </device-classes>
</theme>
